<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Showing User <%= @user.id %>'s Information</title>
  </head>
  <body>
    <h2>User <%= @user.id %>'s Information'</h2>
    <table>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Created At</th>
        <th>Updated At</th>
      </tr>
      <tr>
        <td><%= @user.id %></td>
        <td><%= @user.name %></td>
        <td><%= @user.created_at %></td>
        <td><%= @user.updated_at %></td>
      </tr>
    </table>
  </body>
</html>
