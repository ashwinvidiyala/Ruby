<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h2><%= @dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h2>
    <p>Email: <%= @student.email %></p>

    <h2>Cohort</h2>
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
      </tr>
      <% @students.each do |student| %>
        <% if student != @student %>
          <tr>
            <td><%= student.first_name %></td>
            <td><%= student.last_name %></td>
            <td><%= student.email %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
    <a href="<%= dojo_path @dojo %>">Home</a>
    <a href="<%= edit_dojo_student_path @dojo, @student %>">Edit</a>

  </body>
</html>
