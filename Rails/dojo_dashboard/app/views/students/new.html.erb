<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Add New Student</title>
  </head>
  <body>
    <h2>New Student</h2>

    <form action="<%= dojo_students_path @dojo %>" method="post">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <label for="first_name">First Name</label><br>
      <input type="text" name="student[first_name]"><br><br>

      <label for="last_name">Last Name</label><br>
      <input type="text" name="student[last_name]"><br><br>

      <label for="email">Email Address</label><br>
      <input type="text" name="student[email]"><br><br>

      <label for="dojo">Dojo</label><br>
      <select name="student[dojo_id]">
        <option value="<%= @dojo.id %>"><%= @dojo.branch %></option>
        <% @dojos.each do |dojo| %>
          <% if dojo.branch != @dojo.branch %>
            <option value="<%= dojo.id %>"><%= dojo.branch %></option>
          <% end %>
        <% end %>
      </select><br><br>

      <input type="submit" value="Create">
    </form><br><br>

    <a href="<%= root_path %>">Home</a>
    <a href="<%= dojo_path @dojo %>"><%= @dojo.branch %></a>

    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
        <p><%= error %></p>
      <% end %>
    <% end %>
  </body>
</html>
