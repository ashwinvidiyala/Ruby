<h2>All Users</h2>
<table>
  <tr>
    <th>Frist Name</th>
    <th>Last Name</th>
    <th>Favorite Language</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.favorite_language %></td>
    </tr>
  <% end %>
</table>

<h2>New User</h2>

<form action="<%= users_path %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="first_name">First Name</label><br>
  <input type="text" name="user[first_name]"><br><br>

  <label for="last_name">Last Name</label><br>
  <input type="text" name="user[last_name]"><br><br>

  <label for="favorite_language">Favorite Language</label><br>
  <input type="text" name="user[favorite_language]"><br><br>

  <input type="submit" value="Submit">
</form><br>

<a href="<%= posts_path %>"><button>Posts</button></a>
