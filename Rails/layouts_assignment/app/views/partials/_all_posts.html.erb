<h2>All Posts</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Author</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.user.first_name %><%= post.user.last_name %></td>
    </tr>
  <% end %>
</table>
